{
  "name": "release-action",
  "description": "GitHub Release Action",
  "version": "6.0.0",
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format && pnpm run package",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "local-action": "@github/local-action . src/main.ts .env",
    "package": "tsup",
    "package:watch": "pnpm run package -- --watch",
    "test": "vitest run",
    "all": "pnpm run format && pnpm run lint && pnpm run test && pnpm run package"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@github/local-action": "^3.1.4",
    "@leomotors/config": "1.0.0-rc.1",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "zod": "^3.24.2"
  },
  "packageManager": "pnpm@10.8.1"
}
