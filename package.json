{
  "name": "release-action",
  "description": "GitHub Release Action",
  "version": "6.1.0",
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format && pnpm run package",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "package": "tsup",
    "package:watch": "pnpm run package -- --watch",
    "test": "vitest run",
    "all": "pnpm run format && pnpm run lint && pnpm run test && pnpm run package"
  },
  "devDependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@leomotors/config": "1.1.0",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "packageManager": "pnpm@10.8.1"
}
